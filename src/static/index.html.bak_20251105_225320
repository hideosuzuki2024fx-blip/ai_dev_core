<script>
async function loadCsvList() {
  const sel = document.getElementById("csvSelect");
  sel.innerHTML = "";
  const r = await fetch("/list_csv");
  const j = await r.json();
  if (!j.ok || !j.items.length) {
    sel.innerHTML = "<option value=''>CSVãªã—</option>";
    return;
  }
  j.items.forEach(v => {
    const o = document.createElement("option");
    o.value = v; o.textContent = v;
    sel.appendChild(o);
  });
}
document.getElementById("reloadCsv").onclick = loadCsvList;
window.onload = loadCsvList;

document.getElementById("csvForm").onsubmit = async e => {
  e.preventDefault();
  const msg = document.getElementById("csvMsg");
  msg.textContent = "ç”Ÿæˆä¸­â€¦";
  const fd = new FormData(e.target);
  const r = await fetch("/csv", {method:"POST", body:fd});
  const j = await r.json();
  msg.textContent = j.ok ? "âœ… "+j.filename : "âŒ å¤±æ•—";
  loadCsvList();
};

document.getElementById("pdfForm").onsubmit = async e => {
  e.preventDefault();
  const msg = document.getElementById("pdfMsg");
  msg.textContent = "ç”Ÿæˆä¸­â€¦";
  const fd = new FormData(e.target);
  const r = await fetch("/pdf", {method:"POST", body:fd, redirect:"follow"});
  if (r.redirected) {
    window.open(r.url, "_blank");
    msg.innerHTML = "âœ… <a href='"+r.url+"' target='_blank'>PDFãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼</a>";
  } else {
    const j = await r.json();
    msg.textContent = "âŒ "+(j.error || "ç”Ÿæˆå¤±æ•—");
  }
};
</script>
